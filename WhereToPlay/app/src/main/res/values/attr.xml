<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Tab自定义属性-->
    <attr name="dicon" format="reference"></attr>
    <attr name="dcolor" format="color"></attr>
    <attr name="dtext" format="string"></attr>
    <attr name="dtextsize" format="dimension"></attr>
    <!--可变色的tab-->
    <declare-styleable name="ChangeColorIconWithText">
        <attr name="dicon"></attr>
        <attr name="dcolor"></attr>
        <attr name="dtext"></attr>
        <attr name="dtextsize"></attr>
    </declare-styleable>
    <!-- 自定义圆形图片-->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
    </declare-styleable>

    <!--nice spinner-->
    <declare-styleable name="NiceSpinner">
        <attr name="arrowTint" format="color"/>
        <attr name="hideArrow" format="boolean"/>
    </declare-styleable>

    <!--number password view-->
    <declare-styleable name="NumPswView">
        <attr name="borderWidth" format="dimension"/><!-- 边框的宽度-->
        <attr name="borderColor" format="color"/><!--分割线的颜色 最好与父背景色一致-->
        <attr name="borderMargin" format="dimension"/><!-- 边框的距离 -->
        <attr name="borderRadius" format="dimension"/><!-- 边框圆角-->
        <attr name="passwordLength" format="integer"/><!--密码长度 -->
        <attr name="passwordWidth" format="dimension"/><!--密码圆点的半径 -->
        <attr name="passwordColor" format="color"/><!-- 密码圆点的颜色-->
        <attr name="solidColor" format="color"/><!--填充颜色 -->
        <attr name="passwordRadius" format="dimension"/><!--密码的圆角 -->
    </declare-styleable>
    <!--data binding image-->
    <attr name="url" format="string"/>
    <attr name="img" format="string"/>
    <!--FlowLayout-->
    <declare-styleable name="FlowLayout">
        <attr name="lineSpacing" format="dimension"/>
        <attr name="maxLine" format="integer"/>
    </declare-styleable>

</resources>