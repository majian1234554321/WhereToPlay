<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.fanc.wheretoplay.view.TitleBarView
        android:id="@+id/tbv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/ll"
        layout="@layout/bgirltitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll"
        android:orientation="vertical"

        >

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#33333333" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            tools:text="￥1212121" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="从业申请费用" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#33333333" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="支付方式" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33333333" />

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RadioButton
                android:id="@+id/rb_wxpay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/pay_by_weixin"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/selector_pay_way"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="微信支付" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33333333" />

            <RadioButton
                android:id="@+id/rb_alipay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/pay_by_ali"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/selector_pay_way"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="支付宝支付" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33333333" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33333333" />

        <TextView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/bg_msg_bubble"
            android:gravity="center"
            android:padding="8dp"
            android:text="确认支付"
            android:textColor="@color/white" />

    </LinearLayout>


</RelativeLayout>