<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/dl_sideslip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.fanc.wheretoplay.view.MyViewPager
                android:id="@+id/mvp_main"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/ll_main_tab"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp"/>

            <!--底部选择栏-->
            <LinearLayout
                android:id="@+id/ll_main_tab"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="0dp">

                <LinearLayout
                    android:id="@+id/ll_maintab_reserve"
                    android:layout_width="@dimen/width_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="doClick"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/iv_main_tab_reserve"
                        android:layout_width="@dimen/width_20"
                        android:layout_height="@dimen/height_20"
                        android:src="@drawable/reserve_book"/>

                    <TextView
                        android:id="@+id/tv_main_tab_reserve"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_20"
                        android:gravity="center"
                        android:text="@string/reserve"
                        android:textColor="@color/reserve_unpress"
                        android:textSize="@dimen/textsize_10"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_main_tab_pay"
                    android:layout_width="@dimen/width_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="doClick"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/iv_main_tab_pay"
                        android:layout_width="@dimen/width_20"
                        android:layout_height="@dimen/height_20"
                        android:src="@drawable/reserve_pay"/>

                    <TextView
                        android:id="@+id/tv_main_tab_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_20"
                        android:gravity="center"
                        android:text="@string/pay"
                        android:textColor="@color/reserve_unpress"
                        android:textSize="@dimen/textsize_10"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_main_tab_discover"
                    android:layout_width="@dimen/width_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="doClick"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/iv_main_tab_discover"
                        android:layout_width="@dimen/width_20"
                        android:layout_height="@dimen/height_20"
                        android:src="@drawable/discover"/>

                    <TextView
                        android:id="@+id/tv_main_tab_discover"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_20"
                        android:gravity="center"
                        android:text="@string/discover"
                        android:textColor="@color/reserve_unpress"
                        android:textSize="@dimen/textsize_10"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_main_tab_mine"
                    android:layout_width="@dimen/width_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="doClick"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/iv_main_tab_mine"
                        android:layout_width="@dimen/width_20"
                        android:layout_height="@dimen/height_20"
                        android:src="@drawable/mine"/>

                    <TextView
                        android:id="@+id/tv_main_tab_mine"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_20"
                        android:gravity="center"
                        android:text="@string/mine"
                        android:textColor="@color/reserve_unpress"
                        android:textSize="@dimen/textsize_10"/>

                </LinearLayout>

            </LinearLayout>

