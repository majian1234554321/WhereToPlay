<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="city"
            type="com.fanc.wheretoplay.datamodel.CityResource.City"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_city_search_result_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_48"
            android:layout_marginLeft="@dimen/margin_16"
            android:gravity="center_vertical"
            android:text="@{city.name}"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textsize_level2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_1px"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:background="@color/pay_reserve_list_divider_white"/>
    </LinearLayout>
</layout>
