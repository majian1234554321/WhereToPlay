<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_10"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15"
        android:paddingTop="@dimen/padding_10">

        <ImageView
            android:id="@+id/iv_discover_item"
            android:layout_width="@dimen/width_150"
            android:layout_height="@dimen/height_116"
            android:scaleType="fitXY"
            android:src="@drawable/default_rect"/>

        <TextView
            android:id="@+id/tv_discover_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_toRightOf="@+id/iv_discover_item"
            android:textColor="@color/text_black"
            android:textSize="@dimen/normal_textsize"/>

        <TextView
            android:id="@+id/tv_discover_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_discover_title"
            android:layout_below="@+id/tv_discover_title"
            android:layout_marginTop="@dimen/margin_10"
            android:textColor="@color/text_merchant_detail_consume"
            android:textSize="@dimen/textsize_levelsmall"/>

