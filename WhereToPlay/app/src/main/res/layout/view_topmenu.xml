<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_top_menu_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_height"
        android:background="@color/title_bar">

        <View
            android:id="@+id/v_statubar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/statubar_height"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/v_statubar">


            <ImageView
                android:id="@+id/menu_iv_lefticon"
                android:layout_width="@dimen/menu_height"
                android:layout_height="@dimen/menu_height"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/menu_tv_lefttext"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/menu_height"
                android:layout_marginLeft="@dimen/menu_margin"
                android:gravity="center"
                android:textColor="@drawable/selector_textcolor"
                android:textSize="@dimen/menu_text_size"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/menu_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/menu_height"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="@dimen/menu_title_size"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/menu_tv_righttext"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/menu_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:gravity="center"
                android:textColor="@drawable/selector_textcolor"
                android:textSize="@dimen/menu_text_size"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/menu_iv_righticon"
                android:layout_width="@dimen/menu_width"
                android:layout_height="@dimen/menu_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/menu_margin"
                android:scaleType="center"
                android:visibility="visible"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>
