<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="store"
            type="com.fanc.wheretoplay.datamodel.StoreList.Store" />
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_15"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/tv_housenews_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小包"
            android:textSize="@dimen/textsize_levelmedium"
            android:textColor="@color/text_black"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_housenews_housename"
            />

        <TextView
            android:id="@+id/tv_housenews_housename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8011111"
            android:textSize="@dimen/textsize_levelmedium"
            android:textColor="@color/text_black"
            app:layout_constraintTop_toTopOf="@+id/tv_housenews_type"
            app:layout_constraintBottom_toBottomOf="@+id/tv_housenews_type"
            app:layout_constraintLeft_toRightOf="@+id/tv_housenews_type"
            app:layout_constraintRight_toLeftOf="@+id/tv_housenews_lowest"/>

        <TextView
            android:id="@+id/tv_housenews_lowest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1300"
            android:textSize="@dimen/textsize_levelmedium"
            android:textColor="@color/text_black"
            app:layout_constraintTop_toTopOf="@+id/tv_housenews_type"
            app:layout_constraintBottom_toBottomOf="@+id/tv_housenews_type"
            app:layout_constraintLeft_toRightOf="@+id/tv_housenews_housename"
            app:layout_constraintRight_toLeftOf="@+id/iv_housenews_use_detail"/>

        <ImageView
            android:id="@+id/iv_housenews_use_detail"
            android:layout_width="@dimen/width_18"
            android:layout_height="@dimen/width_18"
            android:src="@drawable/merchant_housenews_use_big"
            android:layout_marginEnd="@dimen/margin_43"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_housenews_lowest"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/iv_housenews_arrow"
            android:layout_width="@dimen/width_6"
            android:layout_height="@dimen/height_11"
            android:src="@drawable/right"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_355"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</layout>
