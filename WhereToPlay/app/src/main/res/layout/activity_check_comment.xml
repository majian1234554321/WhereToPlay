<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cdl_check_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.fanc.wheretoplay.activity.CheckCommentActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/abl_check_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.fanc.wheretoplay.view.TopMenu
                android:id="@+id/tm_check_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll"/>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:id="@+id/fl_check_comment_tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_80"
                android:background="@color/bg"
                android:paddingBottom="@dimen/padding_10"
                android:paddingTop="@dimen/padding_10">

                <com.fanc.wheretoplay.view.PageHorizontalScrollView
                    android:id="@+id/phsv_check_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_phsv_check_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_comment_tab_label_environment"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_60"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:background="@drawable/shape_comment_detail_label_selected"
                            android:gravity="center"
                            android:text="@string/environment"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textsize_level3"/>

                        <TextView
                            android:id="@+id/tv_comment_tab_label_atmosphere"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_60"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:background="@drawable/shape_comment_detail_label_unselected"
                            android:gravity="center"
                            android:text="@string/atmosphere"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textsize_level3"/>

                        <TextView
                            android:id="@+id/tv_comment_tab_label_service"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_60"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:background="@drawable/shape_comment_detail_label_unselected"
                            android:gravity="center"
                            android:text="@string/service"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textsize_level3"/>

                        <TextView
                            android:id="@+id/tv_comment_tab_label_other"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_60"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:background="@drawable/shape_comment_detail_label_unselected"
                            android:gravity="center"
                            android:text="@string/other"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textsize_level3"/>
                    </LinearLayout>
                </com.fanc.wheretoplay.view.PageHorizontalScrollView>

                <ImageView
                    android:id="@+id/iv_comment_tab_label_back"
                    android:layout_width="@dimen/width_36"
                    android:layout_height="@dimen/height_36"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:padding="@dimen/padding_8"
                    android:src="@drawable/left"/>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/pay_reserve_list_divider"/>

            <com.fanc.wheretoplay.view.MyViewPager
                android:id="@+id/mvp_check_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>

