<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.fanc.wheretoplay.view.TopMenu
            android:id="@+id/tm_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_service_menu"
            android:layout_below="@+id/tm_service"
            android:background="@color/bg"/>

        <LinearLayout
            android:id="@+id/ll_service_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:layout_alignParentBottom="true"
            android:background="@color/my_bg"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib_service_audio"
                android:layout_width="@dimen/width_50"
                android:layout_height="@dimen/height_50"
                android:background="@null"
                android:src="@drawable/audio"/>

            <EditText
                android:id="@+id/et_service_input"
                android:layout_width="@dimen/width_0"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@drawable/shape_service_input"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_10"/>

            <ImageButton
                android:id="@+id/ib_service_expression"
                android:layout_width="@dimen/width_50"
                android:layout_height="@dimen/height_50"
                android:background="@null"
                android:src="@drawable/expression"/>

            <ImageButton
                android:id="@+id/ib_service_image"
                android:layout_width="@dimen/width_48"
                android:layout_height="@dimen/height_50"
                android:background="@null"
                android:src="@drawable/image"/>
        </LinearLayout>

    </RelativeLayout>
</layout>