<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.fanc.wheretoplay.view.TitleBarView
        android:id="@+id/tbv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.fanc.wheretoplay.view.TitleBarView>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_release"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="发表评价" />


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消预定" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="#C4483C"
            android:gravity="center"
            android:text="立即支付" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll"
        android:layout_below="@+id/tbv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_storeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>


            <com.fanc.wheretoplay.view.OrderetailsItemView
                android:id="@+id/oi1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.fanc.wheretoplay.view.OrderetailsItemView>

            <com.fanc.wheretoplay.view.OrderetailsItemView
                android:id="@+id/oi2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.fanc.wheretoplay.view.OrderetailsItemView>

            <com.fanc.wheretoplay.view.OrderetailsItemView
                android:id="@+id/oi3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.fanc.wheretoplay.view.OrderetailsItemView>

            <com.fanc.wheretoplay.view.OrderetailsItemView
                android:id="@+id/oi4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.fanc.wheretoplay.view.OrderetailsItemView>

            <com.fanc.wheretoplay.view.OrderetailsItemView
                android:id="@+id/oi5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.fanc.wheretoplay.view.OrderetailsItemView>

            <com.fanc.wheretoplay.view.OrderetailsItemView
                android:id="@+id/oi6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.fanc.wheretoplay.view.OrderetailsItemView>

            <com.fanc.wheretoplay.view.OrderetailsItemView
                android:id="@+id/oi7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.fanc.wheretoplay.view.OrderetailsItemView>

            <com.fanc.wheretoplay.view.OrderetailsItemView
                android:id="@+id/oi8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.fanc.wheretoplay.view.OrderetailsItemView>

            <com.fanc.wheretoplay.view.OrderetailsItemView
                android:id="@+id/oi9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.fanc.wheretoplay.view.OrderetailsItemView>

            <com.fanc.wheretoplay.view.OrderetailsItemView
                android:id="@+id/oi10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.fanc.wheretoplay.view.OrderetailsItemView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="联系客服" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="拨打电话" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订单编号" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="复制" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单编号" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单编号" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单编号" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
