<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.fanc.wheretoplay.view.TitleBarView
        android:id="@+id/tbv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/ll"
        layout="@layout/bgirltitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbv" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#33333333"
                android:gravity="center"
                android:padding="8dp"
                android:text="温馨提示：打※标志为必填项" />

            <com.fanc.wheretoplay.view.SpinnerItem
                android:layout_width="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:id="@+id/spi"
                android:layout_height="wrap_content" />

            <View
                android:layout_below="@+id/sp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:background="#33333333"
                android:layout_height="1dp"/>


            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.fanc.wheretoplay.view.ExtendEditView
                android:id="@+id/eev16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个人照片" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="160dp"
                android:background="@drawable/plus" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="证件照（正反照）" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="160dp"
                android:background="@drawable/plus" />
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="160dp"
                android:background="@drawable/plus" />








            <TextView
                android:id="@+id/go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/bg_msg_bubble"
                android:gravity="center"
                android:padding="8dp"
                android:text="提交登记"
                android:textColor="@color/white" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>