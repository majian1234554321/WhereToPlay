<?xml version="1.0" encoding="utf-8"?>

                                                            

    

                                          

                 
                          
                                                                       
           

    <LinearLayout
        android:id="@+id/sml_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:tag="layout/item_message_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/ll_item_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_15">

            <View
                android:id="@+id/v_unread"
                android:layout_width="@dimen/margin_5"
                android:layout_height="@dimen/margin_5"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@drawable/shape_message_unread"/>

            <LinearLayout
                android:layout_width="@dimen/width_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_item_message_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_1"        
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_textsize"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_item_message_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:tag="binding_2"          
                    android:textColor="@color/pay_reserve_list_text"
                    android:textSize="@dimen/normal_textsize"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_item_message_delete"
            android:layout_width="@dimen/width_100"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="@color/text_red"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_textsize"/>

    </LinearLayout>

         