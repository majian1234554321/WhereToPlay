<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:tag="layout/view_date_picker_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <com.fanc.wheretoplay.view.WheelView
            android:id="@+id/wv_year"
            android:layout_width="@dimen/width_0"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:scrollbars="none"/>

        <com.fanc.wheretoplay.view.WheelView
            android:id="@+id/wv_month"
            android:layout_width="@dimen/width_0"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:scrollbars="none"/>

        <com.fanc.wheretoplay.view.WheelView
            android:id="@+id/wv_day"
            android:layout_width="@dimen/width_0"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:scrollbars="none"/>
    </LinearLayout>
         