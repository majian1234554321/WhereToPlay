    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" android:tag="layout/dialog_room_type_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/tv_dialog_room_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_15"
            android:text="@string/please_choose_room_type"
            android:textColor="@color/text_black"
            android:textSize="@dimen/normal_textsize"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_room_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
         