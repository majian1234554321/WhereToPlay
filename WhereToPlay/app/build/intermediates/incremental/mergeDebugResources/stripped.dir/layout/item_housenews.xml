<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/item_housenews_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_15"
        android:paddingEnd="@dimen/margin_52"
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tv_housenews_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小包"
            android:textSize="@dimen/textsize_levelmedium"
            android:textColor="@color/text_black"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        
        <android.support.constraint.Guideline
            android:id="@+id/gl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.16"/>

        <TextView
            android:id="@+id/tv_housenews_housename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="801"
            android:textSize="@dimen/textsize_levelmedium"
            android:textColor="@color/text_black"
            app:layout_constraintTop_toTopOf="@+id/tv_housenews_type"
            app:layout_constraintBottom_toBottomOf="@+id/tv_housenews_type"
            app:layout_constraintLeft_toRightOf="@+id/gl_1"
            app:layout_constraintRight_toLeftOf="@+id/gl_2"
            />

        <android.support.constraint.Guideline
            android:id="@+id/gl_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>


        <TextView
            android:id="@+id/tv_housenews_lowest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1300"
            android:textSize="@dimen/textsize_levelmedium"
            android:textColor="@color/text_black"
            app:layout_constraintTop_toTopOf="@+id/tv_housenews_type"
            app:layout_constraintBottom_toBottomOf="@+id/tv_housenews_type"
            app:layout_constraintLeft_toRightOf="@+id/gl_2"
            app:layout_constraintRight_toLeftOf="@+id/gl_3"/>

        <android.support.constraint.Guideline
            android:id="@+id/gl_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.83"/>

        <ImageView
            android:id="@+id/iv_housenews_use_detail"
            android:layout_width="@dimen/width_18"
            android:layout_height="@dimen/width_18"
            android:src="@drawable/merchant_housenews_use_big"
            android:layout_marginEnd="@dimen/padding_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/gl_4"/>

        <android.support.constraint.Guideline
            android:id="@+id/gl_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/width_0"/>

    </android.support.constraint.ConstraintLayout>
        <ImageView
            android:id="@+id/iv_housenews_arrow"
            android:layout_width="@dimen/width_6"
            android:layout_height="@dimen/height_11"
            android:src="@drawable/right"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_15"
            />
    </RelativeLayout>
         