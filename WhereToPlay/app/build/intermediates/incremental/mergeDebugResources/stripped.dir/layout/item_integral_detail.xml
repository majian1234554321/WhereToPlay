<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

                 
                        
                                                                   
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_15" android:tag="layout/item_integral_detail_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/tv_item_integral_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_1"     
            android:textColor="@color/white"
            android:textSize="@dimen/normal_textsize"/>

        <TextView
            android:id="@+id/tv_item_integral_get_way"
            android:layout_width="@dimen/width_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:text="@string/get_integral_way"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_textsize"/>

        <TextView
            android:id="@+id/tv_item_integral_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:tag="binding_2"                                          
            android:textColor="@color/text_and_buttor_orange"
            android:textSize="@dimen/textsize_level2"/>
    </LinearLayout>

         