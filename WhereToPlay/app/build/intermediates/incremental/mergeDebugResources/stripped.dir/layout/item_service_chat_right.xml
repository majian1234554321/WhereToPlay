<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/item_service_chat_right_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/tv_service_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_5"
            android:drawableLeft="@drawable/chat_time"
            android:drawablePadding="@dimen/padding_5"
            android:text="昨天20：00"
            android:textColor="@color/dalertdialog_line"
            android:textSize="@dimen/textsize_levelsmall"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10">

            <TextView
                android:id="@+id/tv_service_chat_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_toLeftOf="@+id/civ_head"
                android:background="@drawable/chat_content_right"
                android:gravity="center_vertical"
                android:text="你好，我要反馈你好"
                android:textColor="@color/text_black"
                android:textSize="@dimen/normal_textsize"/>

            <com.fanc.wheretoplay.view.CircleImageView
                android:id="@+id/civ_head"
                android:layout_width="@dimen/width_40"
                android:layout_height="@dimen/height_40"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_launcher"/>

        </RelativeLayout>
    </LinearLayout>
         