<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" android:tag="layout/fragment_integral_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <com.fanc.wheretoplay.view.TopMenu
            android:id="@+id/tm_integral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/width_50"
            android:layout_height="@dimen/height_50"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_30"
            android:src="@drawable/integral"/>

        <TextView
            android:id="@+id/tv_integral_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:text="0"
            android:textColor="@color/text_red"
            android:textSize="@dimen/textsize_level2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@color/pay_reserve_list_divider_white"
            android:paddingBottom="@dimen/padding_5"
            android:paddingLeft="@dimen/padding_15"
            android:paddingTop="@dimen/padding_5"
            android:text="@string/integral_detail"
            android:textColor="@color/pay_reserve_list_text"
            android:textSize="@dimen/normal_textsize"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_integral"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

         