<?xml version="1.0" encoding="utf-8"?>

                                                           
                                                       

    

                 
                         
                                                                           
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15" android:tag="layout/item_recharge_detail_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/tv_item_recharge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:tag="binding_1"                                                                               
            android:textColor="@color/white"
            android:textSize="@dimen/normal_textsize"/>

        <TextView
            android:id="@+id/tv_item_recharge_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_recharge_title"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_10"
            android:textColor="@color/text_deal_detail_tab"
            android:textSize="@dimen/textsize_levelsmall"/>

        <TextView
            android:id="@+id/tv_item_recharge_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tag="binding_2"             
            android:textColor="@color/text_and_buttor_orange"
            android:textSize="@dimen/normal_textsize"/>
    </RelativeLayout>

         